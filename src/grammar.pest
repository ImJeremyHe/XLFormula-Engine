number = @{ int ~ ("." ~ ASCII_DIGIT*)?  }
    int = { ("+" | "-")? ~ ASCII_DIGIT+ }

operator = _{ add | subtract | multiply | divide | power }
    add         = { "+" }
    subtract    = { "-" }
    multiply    = { "*" }
    divide      = { "/" }
    power       = { "^" }
 
expr = { term ~ (operator ~ term)* }
term = _{ number | "(" ~ expr ~ ")" }
formula = _{ SOI ~ "=" ~ expr ~ EOI }

WHITESPACE = _{ " " }

